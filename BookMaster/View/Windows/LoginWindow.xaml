<Window x:Class="BookMaster.View.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookMaster.View.Windows"
        mc:Ignorable="d"
        Title="LoginWindow" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <TextBlock Text="Username" Grid.Column="1" Grid.Row="1"/>
        <TextBlock Text="Password" Grid.Column="1" Grid.Row="3"/>
        <TextBox Name="LoginTb" Grid.Row="1" Grid.Column="2"/>
        <PasswordBox Name="PasswordTb" Grid.Row="3" Grid.Column="2"/>
        <Button Name="EnterBtn" Content="Войти" Grid.Row="5" Grid.Column="1"/>
    </Grid>
</Window>
